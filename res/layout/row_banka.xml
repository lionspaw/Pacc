<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/banka_row" 
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/listrow">
    <TextView 
        android:id="@+id/banka_row_id"
        style="@style/listrow_id"/>
    <View 
        android:id="@+id/banka_row_farba_view"
        style="@style/listrow_color"/>
    <TextView 
        android:id="@+id/banka_row_nazov"
        style="@style/listrowitem_left_upper"
        android:text="nazov"
        />
    <TextView 
        android:id="@+id/banka_row_cislo"
        android:layout_below="@+id/banka_row_nazov"
		style="@style/listrowitem_left_lower"
        android:text="cislo"
        />
    <TextView 
        android:id="@+id/banka_row_ucty_pocet"
        android:layout_below="@+id/banka_row_nazov"
        style="@style/listrowitem_right_lower"
        android:text="Ucty: 2"
        />
</RelativeLayout>